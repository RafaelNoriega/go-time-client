<% include ./partials/_header.ejs%>
    <div class=" col-sm-12 col-md-10 offset-md-1 col-lg-6 offset-lg-3 col-xl-4 offset-4 login-clean">
        <form method="POST" action="/users/login">
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration">
                <img class="img-fluid mb-4" src="images/Pivot-Logo-Full.png" alt="">
            </div>
            <% if(error) { %>
                <p style="color:red;font-size: small;text-align: center;"> <strong> <%= error %> </strong></p>
            <% } %>
            <div class="form-group"><input class="form-control" type="text" name="username" placeholder="User Name" required></div>
            <div class="form-group"><input class="form-control " type="password" name="password" placeholder="Password" required></div>
            <div class="form-group mt-5"><button class="btn btn-primary btn-block mt-4" type="submit">Log In</button></div>
            <a class="d-none forgot" href="#">Forgot your email or password?</a>
        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.bundle.min.js"></script>
    </body>

</html>